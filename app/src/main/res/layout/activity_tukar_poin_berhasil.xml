<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@android:color/white"
    android:padding="16dp">

    <ImageView
        android:layout_width="332dp"
        android:layout_height="332dp"
        android:src="@drawable/tukarpoinberhasil"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Berhasil!"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="24sp"/>

    <TextView
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Pertukaran Poin Anda sedang kami proses!"
        android:textColor="@color/black"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="16sp"/>

    <Button
        android:id="@+id/btn_kemDash"
        android:layout_width="350dp"
        android:layout_height="63dp"
        android:layout_marginTop="100dp"
        android:textSize="18sp"
        android:background="@drawable/stroke_button"
        android:text="Kembali ke Dashboard"
        android:textColor="@android:color/black" />

    <Button
        android:id="@+id/btn_PoinLagi"
        android:layout_width="350dp"
        android:layout_height="63dp"
        android:layout_marginTop="10dp"
        app:cornerRadius="20dp"
        android:textSize="18dp"
        android:backgroundTint="@color/button_green"
        android:text="Tukar Poin Lagi"/>

</LinearLayout>